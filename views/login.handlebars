<section class="auth card">
  <h2>Login to StockoTrade</h2>

  <form id="login-form" method="POST" action="/login">
    <label for="username_input">Username</label>
    <input
      id="username_input"
      name="username_input"
      required
      pattern="^[A-Za-z0-9]+$"
      title="Only letters and numbers allowed."
      maxlength="32"
      minlength="1"
    >

    <label for="password_input">Password</label>
    <input
      id="password_input"
      name="password_input"
      type="password"
      required
      pattern="^(?=.*[A-Z])(?=.*[0-9])(?=.*[^A-Za-z0-9])[\S]{8,}$" 
      minlength="8"
      title="Be at least 8 characters long and contain at least one uppercase, number, and special character."
    >

    <button type="submit" class="btn">Login</button>
  </form>

  <p id="login-error" class="auth-error" hidden></p>
  {{#if errorMessage}}
    <p class="auth-error">{{errorMessage}}</p>
  {{/if}}
</section>
